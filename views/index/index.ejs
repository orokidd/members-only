<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <h1>This is the home page mr pepe julian ozima</h1>
    <div class="header">
        <div>
            <h1>Website Title</h1>
        </div>
        <% if (user) { %>
            <div>
                <p>Welcome back, <%= user.username %></p>
                <a href="/log-out">Log out</a>
            </div>
        <% } else { %>
            <div>
                <a href="/sign-in">Login</a>
            </div>
        <% } %>
    </div>
    
    <div class="main">
        <% posts.forEach(post => { %>
            <div>
                <%= user?.role_id == 2 ? post.fullname : "Anonymous" %> 
            </div>
            <div>
                <%= post.title %>
            </div>
            <div>
                <%= post.content %>
            </div>
            <br>
        <% }); %>
    </div>
</body>
</html>