<% if (user?.role_id === 2 || user?.role_id === 3) { %>
<div class="member-status">
    <p class="member-status-text">You're already a member</p>
</div>
<% } else { %>
<div class="member-status">
    <p class="member-status-text">You're not a member yet. Enter secret passcode to join!</p>

  <% if (locals.error) { %>
  <div class="error-text"><%= error %></div>
  <% } %>

  <form action="/member" method="POST">
    <div class="input-group">
        <input type="password" name="secret_password" id="secret-password-input" placeholder="Enter secret passcode" required />
        <button type="submit" class="secret_password_submit">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right-icon lucide-arrow-right"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </button>
    </div>
  </form>
</div>
<% } %>
